<resources>

    <!--アプリ共通テーマ-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <!--アプリ共通テーマ アクションバーなし-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Fragmentの共通テーマ-->
    <style name="FragmentTheme">
        <item name="android:clickable">true</item>
        <item name="android:background">@color/background</item>
    </style>

    <!--Toolbar-->
    <style name="AppToolbar" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="windowActionModeOverlay">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppButton">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppButton.Rounded">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:foreground">@drawable/ic_add_black_24dp</item>
        <item name="android:foregroundTint">@android:color/background_light</item>
        <item name="android:elevation">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:stateListAnimator">@anim/button_state_list_anim_material_5dp</item>
    </style>

    <style name="Widget.AppTheme.Button" parent="@style/Widget.MaterialComponents.Button"/>
    
    <style name="Widget.AppTheme.Button.Rounded">

    </style>


</resources>
